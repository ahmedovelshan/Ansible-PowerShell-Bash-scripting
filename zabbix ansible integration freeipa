cat hosts.yml

hosts:
  - hostname: ansible1
    visible_name: ansible1
    description: Test server
    group: Linux servers
    template: Linux by Zabbix agent
    ip: 10.220.56.51
  - hostname: ansible2
    visible_name: ansible2
    description:  Test server 2
    group:  Linux servers
    template: Linux by Zabbix agent
    ip: 10.220.56.52


